<section>
  <div class="card list-show fade-in">
    <h2 class="text-5xl font-bold"><%= @list.title %></h2>
    <% @list.items.each do |item| %>
      <div class="w-full">
        <button class="border-2 rounded-2xl w-full py-2" data-controller="completed" data-action="click->completed#handle" ><%= item %></button>
      </div>
    <% end %>
  </div>
</section>
