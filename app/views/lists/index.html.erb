
<section>
  <div class="card list-index">
    <h2 class="text-4xl font-bold mb-2">Your lists!</h2>
    <% @lists.each do |list| %>
      <div class="list-links border-4 rounded-2xl w-full py-2">
        <%= link_to list.title, list_path(list), class: "text-2xl font-bold" %>
      </div>
    <% end %>
    <div class="controls mt-5">
      <%= link_to "Add your list" , new_list_path, class: "add " %>
    </div>
  </div>
</section>
