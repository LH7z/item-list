<!DOCTYPE html>
<html>
  <head>
    <title>ItemList</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body data-controller="flash-timeout">
    <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
    <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
    <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
      <span class="back-span" id="back-span-1"><i class="fa-solid fa-carrot"></i></span>
      <span class="back-span" id="back-span-2"><i class="fa-solid fa-tags"></i></span>
      <span class="back-span" id="back-span-3"><i class="fa-solid fa-list-check"></i></span>
      <span class="back-span" id="back-span-4"><i class="fa-solid fa-cart-shopping"></i></span>
    <section>
      <%= yield %>
    </section>
  </body>
</html>
